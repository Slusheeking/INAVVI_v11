{{ define "email.subject" }}
[{{ .Status | toUpper }}{{ if eq .Status "firing" }}:{{ .Alerts.Firing | len }}{{ end }}] {{ .GroupLabels.SortedPairs.Values | join " " }} - {{ .CommonLabels.alertname }}
{{ end }}

{{ define "email.html" }}
<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>{{ template "email.subject" . }}</title>
  <style>
    body {
      font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
      font-size: 14px;
      line-height: 1.5;
      color: #333;
    }
    .container {
      max-width: 800px;
      margin: 0 auto;
      padding: 20px;
      border: 1px solid #e0e0e0;
      border-radius: 5px;
    }
    .header {
      padding: 10px;
      background-color: {{ if eq .Status "firing" }}#c9302c{{ else }}#5cb85c{{ end }};
      color: white;
      font-weight: bold;
      border-radius: 3px;
    }
    .alert {
      margin: 20px 0;
      padding: 15px;
      border: 1px solid #e0e0e0;
      border-radius: 3px;
    }
    .alert-critical {
      border-left: 5px solid #c9302c;
    }
    .alert-warning {
      border-left: 5px solid #f0ad4e;
    }
    .alert-info {
      border-left: 5px solid #5bc0de;
    }
    .footer {
      margin-top: 20px;
      padding-top: 10px;
      border-top: 1px solid #e0e0e0;
      font-size: 12px;
      color: #777;
    }
    table {
      width: 100%;
      border-collapse: collapse;
    }
    th, td {
      padding: 8px;
      text-align: left;
      border-bottom: 1px solid #e0e0e0;
    }
    th {
      background-color: #f5f5f5;
    }
  </style>
</head>
<body>
  <div class="container">
    <div class="header">
      {{ .Status | toUpper }}{{ if eq .Status "firing" }}: {{ .Alerts.Firing | len }} alert(s){{ end }}
    </div>
    
    {{ if gt (len .Alerts.Firing) 0 }}
    <h3>Alerts Firing</h3>
    {{ range .Alerts.Firing }}
    <div class="alert alert-{{ .Labels.severity }}">
      <h4>{{ .Labels.alertname }}</h4>
      <p><strong>Description:</strong> {{ .Annotations.description }}</p>
      <p><strong>Started:</strong> {{ .StartsAt.Format "2006-01-02 15:04:05 MST" }}</p>
      
      <h5>Labels</h5>
      <table>
        <tr>
          <th>Name</th>
          <th>Value</th>
        </tr>
        {{ range .Labels.SortedPairs }}
        <tr>
          <td>{{ .Name }}</td>
          <td>{{ .Value }}</td>
        </tr>
        {{ end }}
      </table>
      
      <h5>Annotations</h5>
      <table>
        <tr>
          <th>Name</th>
          <th>Value</th>
        </tr>
        {{ range .Annotations.SortedPairs }}
        <tr>
          <td>{{ .Name }}</td>
          <td>{{ .Value }}</td>
        </tr>
        {{ end }}
      </table>
    </div>
    {{ end }}
    {{ end }}
    
    {{ if gt (len .Alerts.Resolved) 0 }}
    <h3>Alerts Resolved</h3>
    {{ range .Alerts.Resolved }}
    <div class="alert">
      <h4>{{ .Labels.alertname }}</h4>
      <p><strong>Description:</strong> {{ .Annotations.description }}</p>
      <p><strong>Started:</strong> {{ .StartsAt.Format "2006-01-02 15:04:05 MST" }}</p>
      <p><strong>Resolved:</strong> {{ .EndsAt.Format "2006-01-02 15:04:05 MST" }}</p>
      
      <h5>Labels</h5>
      <table>
        <tr>
          <th>Name</th>
          <th>Value</th>
        </tr>
        {{ range .Labels.SortedPairs }}
        <tr>
          <td>{{ .Name }}</td>
          <td>{{ .Value }}</td>
        </tr>
        {{ end }}
      </table>
    </div>
    {{ end }}
    {{ end }}
    
    <div class="footer">
      <p>This is an automated alert from the Autonomous Trading System.</p>
      <p>View in <a href="http://127.0.0.1:3001/d/trading-system/trading-system-dashboard">Grafana</a></p>
    </div>
  </div>
</body>
</html>
{{ end }}