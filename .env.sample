# Environment Configuration
# Copy this file to .env and fill in the appropriate values

# General Settings
ENVIRONMENT=development  # development, staging, production
VERSION=latest
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
TZ=UTC

# Database Settings
TIMESCALEDB_HOST=timescaledb
TIMESCALEDB_PORT=5432
TIMESCALEDB_DATABASE=trading_system
TIMESCALEDB_USER=postgres
TIMESCALEDB_PASSWORD=postgres_password

# Redis Settings
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=redis_password

# API Keys
POLYGON_API_KEY=your_polygon_api_key
POLYGON_WEBSOCKET_BUFFER_SIZE=1000
POLYGON_WEBSOCKET_USE_COMPRESSION=true

UNUSUAL_WHALES_API_KEY=your_unusual_whales_api_key
UNUSUAL_WHALES_CACHE_RESULTS=true
UNUSUAL_WHALES_CACHE_TTL_HIGH_PRIORITY=300
UNUSUAL_WHALES_CACHE_TTL_NORMAL=3600

ALPACA_API_KEY=your_alpaca_api_key
ALPACA_API_SECRET=your_alpaca_api_secret
ALPACA_API_BASE_URL=https://paper-api.alpaca.markets  # Use paper trading for development

# Trading Settings
MAX_POSITION_SIZE=0.1  # Maximum position size as a fraction of portfolio
RISK_PERCENTAGE=0.02  # Risk per trade as a fraction of portfolio
MAX_POSITIONS=10  # Maximum number of concurrent positions
MAX_POSITION_VALUE=10000  # Maximum value of a single position in USD
MAX_DAILY_VALUE=50000  # Maximum total value of trades per day in USD

# GPU Settings
GPU_ENABLED=false  # Set to true to enable GPU acceleration
NVIDIA_VISIBLE_DEVICES=all  # Comma-separated list of GPU indices or 'all'

# Model Settings
MODEL_REGISTRY_PATH=/app/models/registry
MODEL_CHECKPOINT_PATH=/app/models/checkpoints
MODEL_SERVING_PORT=8500

# Feature Engineering Settings
FEATURE_STORE_PATH=/app/features
FEATURE_CACHE_ENABLED=true
FEATURE_CACHE_TTL=3600

# Backtesting Settings
BACKTEST_DATA_PATH=/app/data/backtest
BACKTEST_RESULTS_PATH=/app/results/backtest

# Monitoring Settings
PROMETHEUS_ENABLED=true
GRAFANA_ENABLED=true

# Slack Integration
SLACK_BOT_TOKEN=your_slack_bot_token
SLACK_WEBHOOK_URL=your_slack_webhook_url
SLACK_CHANNEL=system-notifications